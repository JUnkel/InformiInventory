        <telerik:RadGridView Grid.Row="1"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             Margin="5"
                             x:Name="DifferenceLinesGrid"
                             AlternationCount="2"
                             GroupRenderMode="Flat"
                             IsFilteringAllowed="False"
                             CanUserReorderColumns="False"
                             CanUserResizeColumns="False"
                             AutoGenerateColumns="False"
                             RowIndicatorVisibility="Collapsed"
                             CanUserFreezeColumns="False"
                             IsSynchronizedWithCurrentItem="True"
                             ItemsSource="{Binding RestockLineModels}"
                             CanUserInsertRows="False"
                             CanUserDeleteRows="False"
                             ShowGroupPanel="False"
                             >
            <telerik:RadGridView.Columns >
                <telerik:GridViewDataColumn DataMemberBinding="{Binding Pos}" IsReadOnly="True" Header="Pos" Width="50"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding GTIN}"  Header="Artikel-Nr" Width="100" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding ArtDesc}" IsReadOnly="True" Header="Bezeichnung" Width="200" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding StorageName}" IsReadOnly="True" Header="Stellplatz" Width="100" />
                <telerik:GridViewDataColumn DataMemberBinding="{Binding Amt}" Header="Bestellmenge" Width="100" TextAlignment="Right" HeaderTextAlignment="Right" DataFormatString="n2" />
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>
