                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Pos}"       Header="Pos" Width="100" />
                <DataGridTextColumn Binding="{Binding GTIN}"        Header="Artikel-Nr." Width="100"  />
                <DataGridTextColumn Binding="{Binding ADesc}"          Header="Bezeichnung" Width="100" />
                <DataGridTextColumn Binding="{Binding StorageName}"   Header="Stellplatz" Width="100"  />
